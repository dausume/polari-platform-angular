# ==============================================================================
# PRF FRONTEND - STARTUP-TIME CONFIGURATION (TIER 2)
# ==============================================================================
# These variables can be overridden at container startup via docker-compose
# without rebuilding the image.
# ==============================================================================

# Frontend HTTP Configuration
FRONTEND_URL=localhost
FRONTEND_HTTP_PORT=4200
FRONTEND_CONTAINER_PORT=4200

# Frontend HTTPS Configuration (Cloudflare-compatible)
FRONTEND_HTTPS_PORT=2087
FRONTEND_HTTPS_ENABLED=true

# Backend Connection Defaults
BACKEND_URL=localhost
BACKEND_HTTP_PORT=3000
BACKEND_HTTPS_PORT=2096
BACKEND_PREFER_HTTPS=false

# SSL Configuration
SSL_CERT_PATH=/app/certs/prf-proxy.crt
SSL_KEY_PATH=/app/certs/prf-proxy.key

# Connection Settings (can also be changed at runtime)
CONNECTION_RETRY_INTERVAL=3000
CONNECTION_MAX_RETRY_TIME=60000
CONNECTION_TIMEOUT=30000
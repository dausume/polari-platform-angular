# syntax=docker/dockerfile:1

# Dockerfile for testing polari-platform-angular
# Supports both isolation testing and full-stack testing

FROM node:20

WORKDIR /app

# Install Chrome for Karma testing
# Note: We need Chrome to run Karma tests with ChromeHeadless
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    && wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' \
    && apt-get update \
    && apt-get install -y google-chrome-stable fonts-ipafont-gothic fonts-wqy-zenhei fonts-thai-tlwg fonts-kacst fonts-freefont-ttf libxss1 \
      --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Install Angular CLI globally
RUN npm install -g @angular/cli@19.2.0

# Copy package files for dependency installation
COPY package*.json ./

# Install dependencies
RUN --mount=type=cache,target=/root/.npm \
    npm install

# Copy application source code
COPY . .

# Environment variables for test configuration
# TEST_MODE can be "isolation" (default) or "fullstack"
ENV TEST_MODE=isolation
ENV BACKEND_URL=http://localhost:8000

# Expose port for debugging (optional)
EXPOSE 9876

# Create a script that runs appropriate test based on TEST_MODE
RUN echo '#!/bin/bash\n\
echo "======================================================================"\n\
echo "POLARI FRONTEND TESTS"\n\
echo "======================================================================"\n\
echo "Test Mode: $TEST_MODE"\n\
echo "Backend URL: $BACKEND_URL"\n\
echo "======================================================================"\n\
echo ""\n\
if [ "$TEST_MODE" = "fullstack" ]; then\n\
  echo "Running FULLSTACK integration tests (with real backend)..."\n\
  npm run test:fullstack\n\
else\n\
  echo "Running ISOLATION unit tests (with mocked services)..."\n\
  npm run test:isolation\n\
fi\n\
' > /app/run-tests.sh && chmod +x /app/run-tests.sh

# Run tests using the script
CMD ["/app/run-tests.sh"]
